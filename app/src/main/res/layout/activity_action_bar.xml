<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewControl.View.ActionBarActivity">

    <Button
        android:id="@+id/show_actionbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="显示ActionBar"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/hide_actionbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/show_actionbar"
        android:text="隐藏ActionBar"
        android:textAllCaps="false" />


    <TextView
        android:id="@+id/tv_actionbar_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="中华万年历App"
        android:textSize="15pt"
        android:textAllCaps="false"/>

</RelativeLayout>